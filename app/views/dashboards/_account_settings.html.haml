.fieldset
  %h2= t(:personal_information)
  = form_for @login, url: dashboards_update_login_path, :builder => SimpleForm::FormBuilder, method: :put, validate: true do |login|
    = hidden_field_tag :view, "account_settings"
    = render partial: 'shared/errors', locals: {object: @login}
    .field-host-fields
      = login.input :first_name
      = login.input :last_name
      = login.fields_for :login, @login.login, validate: true do |f_login|
        = f_login.input :email
      = link_to t(:reset_password), edit_login_registration_path, class: "button button-orange reset_password entypo-lock"
      = login.input :preferred_phone
      = login.input :phone_type

      #field_host_profile_picture_upload
        - if @login.class.name == "FieldHost"
          %h2= t(:edit_profile_picture)
          #drop_zone= t(:drag_and_drop_photos_here)
          = login.file_field :profile_picture
          %h4= t(:saved_projects_photos_and_videos)

    = login.submit t(:save), class: "button button-orange"
