%article.container
  %h2 Sign In

  = simple_form_for(resource, as: resource_name, url: login_session_path) do |f|
    .form-inputs
      = f.input :email, required: false, autofocus: true
      = f.input :password, required: false
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?

    .form-actions
      = f.button :submit, "Sign In", class: "button button-green"

  = render 'devise/shared/links'
