%article.box
  %h3 Or...

  - if controller_name != 'sessions'
    = link_to "Sign in", new_login_session_path, class: "button button-blue"

  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to "Sign up", new_login_registration_path, class: "button button-blue"

  - if devise_mapping.recoverable? && controller_name != 'passwords'
    = link_to "Forgot your password?", new_login_password_path, class: "button button-orange"

  -# - if devise_mapping.recoverable? && controller_name != 'confirmations'
  -#   = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
  -#  %br/

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)
    %br/

  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider)
      %br/