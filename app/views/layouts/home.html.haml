!!!
= render 'shared/head'
%body{'data-controller' => controller_name, 'data-action' => action_name, 'data-application' => 'ipo'}
  = render '/shared/segmentio' if !Rails.env.development?
  = render '/layouts/social_button_scripts' if !Rails.env.development?
  = render 'shared/secondary_navigation'
  .main-header
    %header
      .container
        = link_to root_path, {id: "logo"} do
          / %h1.title Converge
          =image_tag 'converge-logo.png'
        = render 'shared/navigation'

  = yield :hero
  = render 'shared/sub_menus', page: @page
  = yield
  = render '/shared/footer'
