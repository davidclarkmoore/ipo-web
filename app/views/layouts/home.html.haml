!!!
= render 'shared/head'
%body{'data-controller' => controller_name, 'data-action' => action_name, 'data-application' => 'ipo'}
  = render '/shared/segmentio'

  .secondary-header
    .container
      = render 'shared/secondary-navigation'
  .main-header
    %header
      .container
        = link_to root_path,{:id => "logo"} do
          / %h1.title Converge
          =image_tag 'converge-logo.png'
        = render 'shared/navigation' 
  .side
    = yield :hero
  .side-nav
    = render 'shared/side-nav'

  = render 'shared/sub_menus', page: @page
  = yield
  = render '/shared/footer'
