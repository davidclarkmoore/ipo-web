%table.table
  %thead.table-head
    %tr
      %th Name
      %th Description
      %th Address
      %th Team
      %th Student fields
      %th Student passions

  %tbody.table-body
    - projects.each do |p|
      %tr
        %td= p.name
        %td= p.description
        %td= p.address
        %td= p.team_mode ? "Team" : "Individual"
        %td= p.get_pretty_properties("related_fields_of_study")
        %td= p.get_pretty_properties("related_student_passions")