%table.table
  %thead.table-head
    %tr
      %th= t(:name)
      %th= t(:description)
      %th= t(:address)
      %th= t(:team)
      %th= t(:student_fields)
      %th= t(:student_passions)

  %tbody.table-body
    - projects.each do |p|
      %tr
        %td= p.name
        %td= p.description
        %td= p.address
        %td= p.team_mode ? "Team" : "Individual"
        %td= p.related_fields_of_study.join(", ")
        %td= p.related_student_passions.join(", ")