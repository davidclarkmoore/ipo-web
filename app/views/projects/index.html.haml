.container
  .explore
    .c8
      %h3= t(:explore_ipo_connection_projects)
      .total-projects= @total_projects.to_s + t(:total_projects)

    .options
      %h4.explore-by= t(:explore_by)

      #option_buttons
        = render "button_group"

  .search-box
    .sort.clr
      #sort_links
        = render "sort_links"

    = search_form_for @projects, builder: SimpleForm::FormBuilder, remote: true do |f|
      = hidden_field_tag :view, params[:view]
      .filter
        .session
          %h5= t(:session_timeframe)
          = f.text_field :created_at_gt, size: 15, class: "date_picker"
          %span -
          = f.text_field :created_at_lt, size: 15, class: "date_picker"

        .include
          %h5= t(:fields_of_study)
          = select_tag "properties[related_fields_of_study]", options_for_select(fields_of_study, @field_of_study), include_blank: true, multiple: true

        .mode
          %h5= t(:project_mode)
          %span= t(:team)
          = f.check_box :team_mode_true
          %span= t(:individual)
          = f.check_box :team_mode_false

        .search= f.text_field :name_or_address_cont, size: 15, placeholder: t(:text_search), value: @name_or_address

      .interests.clr
        %h5= t(:filter_by_passion)
        - student_passions.each do |key, value|
          = check_box_tag "properties[related_student_passions][]", value
          = key

      = f.submit t(:search), class: "button button-orange"

  #projects
    - if @projects.result.empty?
      %h2.not-available= t(:no_projects_available)
    - else
      #related_projects
        = render "projects_#{params[:view]}", projects: @projects.result.order("#{params[:order]}")

:javascript
  $("#q_created_at_gt").datepicker({ dateFormat: "yy/mm/dd" });
  $("#q_created_at_lt").datepicker({ dateFormat: "yy/mm/dd" });
