= render 'header', active_step: params[:id]

%h3.center About You

= simple_form_for @project, url: wizard_path, method: :put, validate: true do |f|
  = f.fields_for :field_host do |f_field_host|

    .field-host-fields
      = f_field_host.input :salutation
      = f_field_host.input :first_name
      = f_field_host.input :middle_initial, label: "Initial"
      = f_field_host.input :last_name
      = f_field_host.input :email
      = f_field_host.input :preferred_phone
      = f_field_host.input :phone_type

    .field-host-profile
      &nbsp;

  .c12.omega
    %h3.center Your Background

    = f.fields_for :organization do |f_organization|
      = f_organization.input :name
      = f_organization.input :organization_type
      = f_organization.input :website

    = f.fields_for :field_host do |f_field_host|
      = f_field_host.input :role_title
      = f_field_host.input :years_associated_with_organization, as: :integer

  = f.submit "Save & Continue to Step #2"