<div class='page_part' id='<%= new_part ? "page_part_new_#{part_index}" : part.to_param %>'>
  <%= hidden_field_tag "page[parts_attributes][#{part_index}][title]", part.title if new_part %>
  <%= text_area_tag "page[parts_attributes][#{part_index}][body]", part.body, :rows => 20, :class => 'wymeditor widest' %>
  <%= hidden_field_tag "page[parts_attributes][#{part_index}][position]", part_index %>

  <label>Page Part Title</label>
  <%= text_field_tag "page[parts_attributes][#{part_index}][title]", part.title %>

  <label>Color</label>
  <%= select_tag "page[parts_attributes][#{part_index}][color]", options_for_select(Refinery::PagePart.color_options, part.color) %>

   <label>Display Type</label>
  <%= select_tag "page[parts_attributes][#{part_index}][display_type]", options_for_select(Refinery::PagePart.display_types, part.display_type) %>

  <label>Margin</label>
  <%= select_tag "page[parts_attributes][#{part_index}][margin]", options_for_select(Refinery::PagePart.margin_options, part.margin) %>

  <div class='column_image_field wym_area_top'>
    <span class='clearfix label_inline_with_link'>
      <%= link_to 'Add Column Image', refinery.insert_admin_images_path({
                    :dialog => true, :width => 950, :height => 510,
                    :callback => "column_image_added"
                  }),
                  :id => "add_image_link",
                  :class => "add_column_image_link" %>
    </span>
  </div>

  <% if part.column_image.present? %>
    <div class='column_image'>
      <%= image_fu part.column_image, '135x135#c' %>
    </div>
  <% end %>
</div>