%footer.box.box-grey.light-text
  .container
    .c6
      .footer-col
        %h3 explore
        = footer_menu('explore').to_html

      .footer-col
        %h3 about converge
        = footer_menu('about').to_html

      .footer-col
        %h3 resources
        = footer_menu('resources').to_html    

    #reach-out.c6.omega
      = simple_form_for :apply, url: '/apply', method: 'post', remote: true do |f|
        %h1 reach out
        %div
          %span Hi, my name is
          = f.input :first_name, label: false, placeholder: 'First Name', required: true
          = f.input :last_name, label: false, placeholder: 'Last Name', required: true
          = f.input :email, label: false, placeholder: 'Enter email address...'
          %span I'm interested in...
          = f.input :interest_in, label: false, collection: ['Hosting Interns', 'Internship or Outreach', 'Joining Staff Team', 'Mentoring Students', 'Supporting this Ministry', 'Request a Speaker', 'Other']
        %div

        = f.submit "Go!", :disable_with => "Submitting...", class: "button"
        %p.msg

    #footer-logo.c12.omega
      = image_tag "ywam_initiative.png"